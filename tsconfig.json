{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "demo",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "coverage"]
}